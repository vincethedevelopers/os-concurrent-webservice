{
  "id": null,
  "title": "Concurrent API Performance",
  "tags": ["api", "performance", "operating-systems"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Request Rate (req/s)",
      "type": "graph",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(api_requests_total[1m])",
          "legendFormat": "{{endpoint}} - {{method}}"
        }
      ]
    },
    {
      "id": 2,
      "title": "Response Time (seconds)",
      "type": "graph",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(api_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95 - {{endpoint}}"
        },
        {
          "expr": "histogram_quantile(0.50, rate(api_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p50 - {{endpoint}}"
        }
      ]
    },
    {
      "id": 3,
      "title": "Active Threads",
      "type": "graph",
      "gridPos": { "x": 0, "y": 8, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "api_active_threads",
          "legendFormat": "Active Threads"
        }
      ]
    },
    {
      "id": 4,
      "title": "CPU Operations Completed",
      "type": "stat",
      "gridPos": { "x": 8, "y": 8, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "api_cpu_operations_total"
        }
      ]
    },
    {
      "id": 5,
      "title": "Error Rate",
      "type": "graph",
      "gridPos": { "x": 16, "y": 8, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "rate(api_errors_total[5m])",
          "legendFormat": "{{type}}"
        }
      ]
    }
  ]
}
